{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-message",
    "dialog:allow-open",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$DATA/**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$DATA/**" }]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "$DATA/**" }]
    }
  ]
}
